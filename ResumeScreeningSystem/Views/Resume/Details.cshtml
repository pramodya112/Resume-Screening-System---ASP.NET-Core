@model ResumeScreeningSystem.Models.Resume
@{
    ViewData["Title"] = "Resume Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h2 class="mb-1">Resume Details</h2>
                <p class="text-muted mb-0">Comprehensive view of the submitted application</p>
            </div>
        </div>

        <!-- Resume Information Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <i class="bi bi-file-earmark-person"></i> Application Information
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <p class="text-muted small mb-1">RESUME ID</p>
                        <span class="badge bg-primary" style="font-size: 1rem;">
                            #@Model.Id
                        </span>
                    </div>
                    <div class="col-md-4">
                        <p class="text-muted small mb-1">FILE NAME</p>
                        <strong>@Model.FileName</strong>
                    </div>
                    <div class="col-md-4">
                        <p class="text-muted small mb-1">STATUS</p>
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle"></i> Uploaded
                        </span>
                    </div>
                </div>

                <hr />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="text-muted small mb-1">JOB POSITION</p>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-briefcase text-primary me-2" style="font-size: 1.25rem;"></i>
                            <strong>@Model.JobPosting?.JobTitle</strong>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <p class="text-muted small mb-1">RECRUITER</p>
                        <div class="d-flex align-items-center">
                            <div class="avatar-md me-2">
                                @(Model.JobPosting?.Recruiter?.RecruiterName?.Substring(0, 1).ToUpper() ?? "?")
                            </div>
                            <div>
                                <strong>@Model.JobPosting?.Recruiter?.RecruiterName</strong>
                                <br />
                                <small class="text-muted">@Model.JobPosting?.Recruiter?.Email</small>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-12">
                        <p class="text-muted small mb-1">FILE LOCATION</p>
                        <div class="file-path">
                            <i class="bi bi-folder"></i>
                            <code>@Model.FilePath</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Extracted Text Card -->
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-file-text"></i> Extracted Resume Content
                </span>
                <span class="badge bg-light text-dark">
                    @Model.Extractedtext.Length characters
                </span>
            </div>
            <div class="card-body">
                <div class="extracted-text-container">
                    @Model.Extractedtext
                </div>
            </div>
        </div>
    </div>

    <!-- Action Sidebar -->
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4 sticky-top" style="top: 2rem;">
            <div class="card-header">
                <i class="bi bi-lightning-charge"></i> Quick Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="bi bi-download"></i> Download Resume
                    </a>

                    <a asp-action="Index" asp-route-jobPostingId="@Model.JobPostingId" class="btn btn-info">
                        <i class="bi bi-files"></i> View All Resumes
                    </a>

                    <a asp-controller="JobPosting" asp-action="Edit" asp-route-id="@Model.JobPostingId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Job Posting
                    </a>

                    <hr />

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100"
                                onclick="return confirm('Are you sure you want to delete this resume? This action cannot be undone.')">
                            <i class="bi bi-trash"></i> Delete Resume
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="card shadow-sm">
            <div class="card-header">
                <i class="bi bi-bar-chart"></i> Resume Statistics
            </div>
            <div class="card-body">
                <div class="stat-item">
                    <div class="stat-item-icon">
                        <i class="bi bi-file-text"></i>
                    </div>
                    <div class="stat-item-content">
                        <p class="mb-0">Text Length</p>
                        <strong>@Model.Extractedtext.Length chars</strong>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-item-icon">
                        <i class="bi bi-chat-text"></i>
                    </div>
                    <div class="stat-item-content">
                        <p class="mb-0">Word Count</p>
                        <strong>@Model.Extractedtext.Split(new[] { ' ', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries).Length words</strong>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-item-icon">
                        <i class="bi bi-file-earmark"></i>
                    </div>
                    <div class="stat-item-content">
                        <p class="mb-0">File Type</p>
                        <strong>@System.IO.Path.GetExtension(Model.FileName).ToUpper()</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-md {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 1.25rem;
    }

    .file-path {
        background: var(--bg-light);
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .file-path code {
            color: var(--text-primary);
            font-size: 0.875rem;
            word-break: break-all;
        }

    .extracted-text-container {
        max-height: 500px;
        overflow-y: auto;
        white-space: pre-wrap;
        font-family: 'Courier New', monospace;
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--border-color);
        font-size: 0.875rem;
        line-height: 1.6;
    }

        .extracted-text-container::-webkit-scrollbar {
            width: 8px;
        }

        .extracted-text-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .extracted-text-container::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 4px;
        }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: var(--bg-light);
        border-radius: 0.5rem;
        margin-bottom: 0.75rem;
    }

        .stat-item:last-child {
            margin-bottom: 0;
        }

    .stat-item-icon {
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--primary-color);
        box-shadow: var(--shadow-sm);
    }

    .stat-item-content p {
        font-size: 0.75rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-item-content strong {
        font-size: 1rem;
        color: var(--text-primary);
    }

    .card-header {
        font-weight: 600;
        font-size: 1.125rem;
    }

    .sticky-top {
        position: sticky;
        top: 2rem;
        z-index: 1020;
    }

    hr {
        margin: 1rem 0;
        opacity: 0.1;
    }

    .btn i {
        margin-right: 0.25rem;
    }

    @@media (max-width: 991px) {
        .sticky-top {
            position: relative;
            top: 0;
        }
    }
</style>