@model ResumeScreeningSystem.Models.Resume
@{
    ViewData["Title"] = "Resume Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Resume Details</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5>@Model.FileName</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3"><strong>Resume ID:</strong></div>
            <div class="col-md-9">@Model.Id</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3"><strong>File Name:</strong></div>
            <div class="col-md-9">@Model.FileName</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3"><strong>Job Posting:</strong></div>
            <div class="col-md-9">@Model.JobPosting?.JobTitle</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3"><strong>Recruiter:</strong></div>
            <div class="col-md-9">@Model.JobPosting?.Recruiter?.RecruiterName</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3"><strong>File Path:</strong></div>
            <div class="col-md-9"><small class="text-muted">@Model.FilePath</small></div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-secondary text-white">
        <h5>Extracted Text</h5>
    </div>
    <div class="card-body">
        <div style="max-height: 400px; overflow-y: auto; white-space: pre-wrap; font-family: monospace; background-color: #f8f9fa; padding: 15px; border-radius: 5px;">
            @Model.Extractedtext
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-success">
        <i class="bi bi-download"></i> Download Resume
    </a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this resume?')">
            <i class="bi bi-trash"></i> Delete
        </button>
    </form>
</div>