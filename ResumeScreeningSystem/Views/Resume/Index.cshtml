@model IEnumerable<ResumeScreeningSystem.Models.Resume>
@{
    ViewData["Title"] = "Uploaded Resumes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-2">Resume Management</h2>
        <p class="text-muted mb-0">View and manage all submitted applications</p>
    </div>
    <a asp-controller="JobPosting" asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-briefcase"></i> View Jobs
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Section -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row align-items-end">
                <div class="col-md-6">
                    <label class="form-label">
                        <i class="bi bi-funnel"></i> Filter by Job Posting
                    </label>
                    <select name="jobPostingId" class="form-select" onchange="this.form.submit()">
                        <option value="">-- All Job Postings --</option>
                        @foreach (var job in ViewBag.JobPostings)
                        {
                            <option value="@job.Id" selected="@(Context.Request.Query["jobPostingId"] == job.Id.ToString())">
                                @job.JobTitle
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-6 mt-3 mt-md-0">
                    @if (ViewBag.JobPostingTitle != null)
                    {
                        <div class="alert alert-info mb-0 d-flex align-items-center justify-content-between">
                            <span>
                                <i class="bi bi-info-circle"></i>
                                Filtered: <strong>@ViewBag.JobPostingTitle</strong>
                            </span>
                            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-x"></i> Clear
                            </a>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-primary">
                    <i class="bi bi-files"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Total Resumes</p>
                    <h3 class="stat-value">@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-success">
                    <i class="bi bi-briefcase"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Job Postings</p>
                    <h3 class="stat-value">@Model.Select(r => r.JobPostingId).Distinct().Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-info">
                    <i class="bi bi-person"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Recruiters</p>
                    <h3 class="stat-value">@Model.Where(r => r.JobPosting?.Recruiter != null).Select(r => r.JobPosting.Recruiter.Id).Distinct().Count()</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Resumes Table -->
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="width: 5%;">
                        <i class="bi bi-hash"></i>
                    </th>
                    <th style="width: 25%;">
                        <i class="bi bi-file-earmark"></i> File Name
                    </th>
                    <th style="width: 20%;">
                        <i class="bi bi-briefcase"></i> Job Position
                    </th>
                    <th style="width: 15%;">
                        <i class="bi bi-person"></i> Recruiter
                    </th>
                    <th style="width: 35%;" class="text-center">
                        <i class="bi bi-gear"></i> Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var resume in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <span class="badge bg-primary">@resume.Id</span>
                        </td>
                        <td class="align-middle">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-file-pdf text-danger me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <strong>@resume.FileName</strong>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">
                            <span class="text-primary">@resume.JobPosting?.JobTitle</span>
                        </td>
                        <td class="align-middle">
                            @if (resume.JobPosting?.Recruiter != null)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm me-2">
                                        @resume.JobPosting.Recruiter.RecruiterName.Substring(0, 1).ToUpper()
                                    </div>
                                    <span>@resume.JobPosting.Recruiter.RecruiterName</span>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td class="align-middle text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@resume.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Download" asp-route-id="@resume.Id" class="btn btn-sm btn-success" title="Download">
                                    <i class="bi bi-download"></i>
                                </a>
                            </div>

                            <form asp-action="Delete" asp-route-id="@resume.Id" method="post" style="display:inline;" class="ms-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" title="Delete"
                                        onclick="return confirm('Are you sure you want to delete this resume?')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4 d-flex justify-content-between align-items-center">
        <p class="text-muted mb-0">
            <i class="bi bi-info-circle"></i> Displaying @Model.Count() resume(s)
        </p>
        <a asp-controller="JobPosting" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Job Postings
        </a>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="empty-state">
            <i class="bi bi-inbox" style="font-size: 4rem; color: var(--text-secondary);"></i>
            <h4 class="mt-3">No Resumes Found</h4>
            <p class="text-muted">No resumes have been uploaded yet for this filter</p>
            @if (ViewBag.JobPostingTitle != null)
            {
                <a asp-action="Index" class="btn btn-outline-primary mt-3">
                    <i class="bi bi-funnel-fill"></i> Clear Filter
                </a>
            }
            else
            {
                <a asp-controller="JobPosting" asp-action="Index" class="btn btn-primary mt-3">
                    <i class="bi bi-briefcase"></i> View Job Postings
                </a>
            }
        </div>
    </div>
}

<style>
    .stat-card {
        background: white;
        border-radius: 0.75rem;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        margin: 0;
        font-size: 0.875rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-value {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    .avatar-sm {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    .empty-state {
        padding: 3rem;
        background: var(--bg-light);
        border-radius: 1rem;
        border: 2px dashed var(--border-color);
    }

    .table-responsive {
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }
</style>