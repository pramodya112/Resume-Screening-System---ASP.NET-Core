@model IEnumerable<ResumeScreeningSystem.Models.Resume>
@{
    ViewData["Title"] = "Uploaded Resumes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Uploaded Resumes</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Filter by Job Posting</label>
                    <select name="jobPostingId" class="form-control" onchange="this.form.submit()">
                        <option value="">-- All Job Postings --</option>
                        @foreach (var job in ViewBag.JobPostings)
                        {
                            <option value="@job.Id" selected="@(Context.Request.Query["jobPostingId"] == job.Id.ToString())">
                                @job.JobTitle
                            </option>
                        }
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.JobPostingTitle != null)
{
    <div class="alert alert-info">
        Showing resumes for: <strong>@ViewBag.JobPostingTitle</strong>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">Clear Filter</a>
    </div>
}

<!-- Resumes Table -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>File Name</th>
            <th>Job Posting</th>
            <th>Recruiter</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var resume in Model)
            {
                <tr>
                    <td>@resume.Id</td>
                    <td>@resume.FileName</td>
                    <td>@resume.JobPosting?.JobTitle</td>
                    <td>@resume.JobPosting?.Recruiter?.RecruiterName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@resume.Id" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a asp-action="Download" asp-route-id="@resume.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-download"></i> Download
                        </a>
                        <form asp-action="Delete" asp-route-id="@resume.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this resume?')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No resumes uploaded yet.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="JobPosting" asp-action="Index" class="btn btn-secondary">Back to Job Postings</a>
</div>