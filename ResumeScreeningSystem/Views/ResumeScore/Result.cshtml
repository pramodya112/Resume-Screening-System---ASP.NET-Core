
@{
    ViewData["Title"] = "Resume Analysis Results";
    Layout = "_Layout.cshtml";
}

<h2>Resume Analysis Results</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No resumes have been scored yet.
    </div>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Resume File</th>
                <th>Job Posting</th>
                <th>Recruiter</th>
                <th>Match Score (%)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resume in Model)
            {
                <tr>
                    <td>@resume.FileName</td>
                    <td>@resume.JobPostingTitle</td>
                    <td>@resume.RecruiterName</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @resume.Score%" aria-valuenow="@resume.Score" aria-valuemin="0" aria-valuemax="100">
                                @resume.Score.ToString("0.##")%
                            </div>
                        </div>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-controller="Resume" asp-action="Download" asp-route-id="@resume.Id">Download</a>
                        <form asp-controller="Resume" asp-action="Delete" asp-route-id="@resume.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this resume?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
