@model List<ResumeScreeningSystem.Models.ResumeScoreViewModel>

@{
    ViewData["Title"] = "Results - " + ViewBag.JobTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Scores for <strong>@ViewBag.JobTitle</strong></h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info">@TempData["Info"]</div>
    }

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No scores yet. Click "Analyze All Resumes" to begin.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Rank</th>
                        <th>Resume</th>
                        <th>Score</th>
                        <th>Summary</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (item, i) in Model.Select((x, idx) => (x, idx)))
                    {
                        <tr>
                            <td>#@(i + 1)</td>
                            <td>@item.FileName</td>
                            <td>
                                <div class="progress" style="height:30px;">
                                    <div class="progress-bar @(item.Score >= 70 ? "bg-success" : item.Score >= 50 ? "bg-warning" : "bg-danger")"
                                         style="width:@item.Score%">
                                        @item.Score.ToString("F1")%
                                    </div>
                                </div>
                            </td>
                            <td><small>@item.AnalysisSummary</small></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</div>