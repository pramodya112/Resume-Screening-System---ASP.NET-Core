@* Layout file for Resume Screening System *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resume Screening System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f9fafb;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #0d6efd;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-nav .nav-link:hover {
            text-decoration: underline;
        }

        .container {
            margin-top: 30px;
        }

        footer {
            text-align: center;
            padding: 20px;
            background-color: #0d6efd;
            color: white;
            margin-top: 50px;
        }

        .alert {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="JobPosting" asp-action="Index">
                📄 Resume Screening System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Job Posting Links -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JobPosting" asp-action="Index">Job Postings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JobPosting" asp-action="Create">Add Job</a>
                    </li>

                    <!-- Recruiter Links -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Recruiter" asp-action="Index">Recruiters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Recruiter" asp-action="Create">Add Recruiter</a>
                    </li>

                    <!-- Resume Upload -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Resume" asp-action="Upload">Upload Resume</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <p>© 2025 Resume Screening System | Built with ASP.NET Core</p>
    </footer>

    <!-- Optional Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
