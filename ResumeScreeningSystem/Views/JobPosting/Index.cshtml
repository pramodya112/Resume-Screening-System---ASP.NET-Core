@model IEnumerable<ResumeScreeningSystem.Models.JobPosting>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Job Postings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-2">Job Postings</h2>
        <p class="text-muted mb-0">Manage all your job postings and track applications</p>
    </div>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add New Job
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="width: 5%;">
                        <i class="bi bi-hash"></i>
                    </th>
                    <th style="width: 20%;">
                        <i class="bi bi-briefcase"></i> Title
                    </th>
                    <th style="width: 35%;">
                        <i class="bi bi-file-text"></i> Description
                    </th>
                    <th style="width: 15%;">
                        <i class="bi bi-person"></i> Recruiter
                    </th>
                    <th style="width: 25%;" class="text-center">
                        <i class="bi bi-gear"></i> Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <span class="badge bg-primary">@job.Id</span>
                        </td>
                        <td class="align-middle">
                            <strong>@job.JobTitle</strong>
                        </td>
                        <td class="align-middle">
                            <div style="max-height: 60px; overflow: hidden; text-overflow: ellipsis;">
                                @job.JobDescription
                            </div>
                        </td>
                        <td class="align-middle">
                            @if (job.Recruiter != null)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-2">
                                        @job.Recruiter.RecruiterName.Substring(0, 1).ToUpper()
                                    </div>
                                    <span>@job.Recruiter.RecruiterName</span>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td class="align-middle text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@job.Id" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a class="btn btn-sm btn-success" asp-controller="Resume" asp-action="Upload" asp-route-jobPostingId="@job.Id" title="Upload Resume">
                                    <i class="bi bi-cloud-upload"></i>
                                </a>

                                <a class="btn btn-sm btn-info" asp-controller="Resume" asp-action="Index" asp-route-jobPostingId="@job.Id" title="View Resumes">
                                    <i class="bi bi-files"></i>
                                </a>
                            </div>

                            <form asp-action="Delete" asp-route-id="@job.Id" method="post" style="display:inline;" class="ms-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" title="Delete"
                                        onclick="return confirm('Are you sure you want to delete this job posting?')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3 d-flex justify-content-between align-items-center">
        <p class="text-muted mb-0">
            <i class="bi bi-info-circle"></i> Showing @Model.Count() job posting(s)
        </p>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="empty-state">
            <i class="bi bi-briefcase" style="font-size: 4rem; color: var(--text-secondary);"></i>
            <h4 class="mt-3">No Job Postings Yet</h4>
            <p class="text-muted">Get started by creating your first job posting</p>
            <a class="btn btn-primary mt-3" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create Job Posting
            </a>
        </div>
    </div>
}

<style>
    .avatar-circle {
        width: 35px;
        height: 35px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    .empty-state {
        padding: 3rem;
        background: var(--bg-light);
        border-radius: 1rem;
        border: 2px dashed var(--border-color);
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }

    .table-responsive {
        border-radius: 0.75rem;
        overflow: hidden;
    }
</style>