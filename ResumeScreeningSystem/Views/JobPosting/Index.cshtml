@model IEnumerable<ResumeScreeningSystem.Models.JobPosting>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Job Postings";
}

<h2 class="mb-4">Job Postings</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Add New Job</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Recruiter</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var job in Model)
            {
                <tr>
                    <td>@job.JobTitle</td>
                    <td>@job.JobDescription</td>
                    <td>@(job.Recruiter != null ? job.Recruiter.RecruiterName : "N/A")</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@job.Id">Edit</a>

                        <form asp-action="Delete" asp-route-id="@job.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this job?')">
                                Delete
                            </button>
                        </form>

                        <a class="btn btn-sm btn-success" asp-controller="Resume" asp-action="Upload" asp-route-jobPostingId="@job.Id">
                            Upload Resume
                        </a>

                        <a class="btn btn-sm btn-info" asp-controller="Resume" asp-action="Index" asp-route-jobPostingId="@job.Id">
                            View Resumes
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No job postings available.</td>
            </tr>
        }
    </tbody>
</table>