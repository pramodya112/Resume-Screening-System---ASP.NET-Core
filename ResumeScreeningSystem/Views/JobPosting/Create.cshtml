@model ResumeScreeningSystem.Models.JobPosting

@{
    ViewData["Title"] = "Create Job Posting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Job Posting</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="JobTitle" class="form-control" />
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="JobDescription" class="form-control"></textarea>
        <span asp-validation-for="JobDescription" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RecruiterId" class="form-label">Recruiter</label>
        <select asp-for="RecruiterId"
                asp-items="@(new SelectList(ViewBag.Recruiters, "Id", "RecruiterName"))"
                class="form-control">
            <option value="">Select Recruiter</option>
        </select>
        <span asp-validation-for="RecruiterId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
