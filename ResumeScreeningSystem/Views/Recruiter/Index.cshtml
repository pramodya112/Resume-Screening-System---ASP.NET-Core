@model IEnumerable<ResumeScreeningSystem.Models.Recruiter>

@{
    ViewData["Title"] = "Recruiters";
}

<h2>Recruiters</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a class="btn btn-primary mb-3" asp-action="Create">Add New Recruiter</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Jobs Assigned</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recruiter in Model)
        {
            <tr>
                <td>@recruiter.RecruiterName</td>
                <td>@recruiter.Email</td>
                <td>@(recruiter.JobPostings?.Count ?? 0)</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@recruiter.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@recruiter.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
